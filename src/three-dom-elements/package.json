{
  "name": "three-dom-elements",
  "version": "1.2.0",
  "homepage": "https://github.com/CodyJasonBennett/three-dom-elements",
  "description": "A lightweight three.js extension to integrate DOM elements into your scene.",
  "repository": "https://github.com/CodyJasonBennett/three-dom-elements.git",
  "author": "Cody Bennett <hi@codyb.co>",
  "license": "MIT",
  "files": [
    "dist/**.js*",
    "dist/**/*.ts"
  ],
  "source": "src/index.ts",
  "main": "dist/index.umd.js",
  "module": "dist/index.modern.module.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/three": "^0.127.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.23.0",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1",
    "serve": "^11.3.2",
    "three": "^0.127.0",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "three": ">=0.125"
  },
  "scripts": {
    "dev": "concurrently 'npm:build-watch' 'npm:start'",
    "start": "serve",
    "build": "microbundle --globals three=THREE --external three",
    "build-watch": "microbundle watch",
    "lint": "prettier src --check",
    "lint-fix": "prettier src --write src"
  }
}
